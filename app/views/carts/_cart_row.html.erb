<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-xs-8">
        <h4><%= product.name %></h4>
      </div>
      <div class="col-xs-4">
        <%= form_for order_line, remote: true do |f| %>
          <h4 class="text-right"><%= "Unit Price" %>: 
            <%= number_to_currency order_line.price %>
          </h4>
          <div class="row">
            <div class="col-xs-4">
              <%= f.number_field :number, value: order_line.number.to_i, 
                class: "form-control", min: 1 %>
              <%= f.hidden_field :product_id, value: product.id %>
            </div>
            <div class="col-xs-8 text-right">
              <div class="btn-group">
                <%= f.submit "Update Quantity", class: "btn btn-warning" %>
                <%= link_to "Delete", order_line, 
                  {data: {confirm: "Confirm", name: order_line.product.name}, 
                  method: :delete, remote: true, class: "btn btn-danger"} %>
              </div>
            </div>
          </div>
          <h4 class="text-right"><%= "Total Price" %>: 
            <%= number_to_currency order_line.total_price %>
          </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
