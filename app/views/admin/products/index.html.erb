<% provide :title, "Product" %>
<div class="container">
  <div class="row" >
    <div class="col-md-4" >
      <h1><%= Product %></h1>

      <%= will_paginate %>

      <ul>
        <% @products.each do |product| %>
          <li>
            <%= link_to product.name, root_path %> :
            <%= link_to product.quantity, root_path %>
          </li>
        <% end %>
      </ul>

      <%= will_paginate %>
    </div>
  </div>
</div>
